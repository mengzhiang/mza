<project name="kissy.build" default="build" basedir=".">
    <description>Component Build File</description>

    <import file="../../tools/build.xml"/>

    <property file="build.properties"/>
    <property name="src.dir" location="."/>

    <target name="concat">
        <concat destfile="kissy-pkg.js" encoding="${charset}" outputencoding="${charset}">
            <path path="kissy.js"/>
            <path path="lang.js"/>
            <path path="loader.js"/>
            <path path="mods.js"/>
        </concat>
    </target>

    <target name="clean">
        <delete file="kissy-pkg.js"/>
        <replaceregexp match="@DEBUG@" replace="" flags="g" byline="true" file="${build.dir}/${component.name}/kissy-pkg-min.js"  encoding="${charset}"/>
    </target>

    <target name="build" depends="concat,common.build,clean">
    </target>
</project>